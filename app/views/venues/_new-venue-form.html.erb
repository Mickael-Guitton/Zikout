<div data-action="click@window->popup#closePopup">
  <div id="new-venue-popup" data-venue-form-target="popup" class="venue-form-popup">
    <div class="popup-content">
      <span class="close-button" data-action="popup#hidePopup"></span>
      <%= simple_form_for @venue do |f| %>
        <div class="field">
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.text_field :category %>
        </div>
        <div class="field">
          <%= f.text_field :street %>
        </div>
        <div class="field">
          <%= f.text_field :city %>
        </div>
        <div class="field">
          <%= f.text_field :zipcode %>
        </div>
        <div class="field">
          <%= f.text_field :country %>
        </div>
        <div class="field">
          <%= f.text_field :lodging %>
        </div>
        <div class="field">
          <%= f.text_field :capacity %>
        </div>
        <div class="field">
          <%= f.text_field :scene_size %>
        </div>
        <div class="field">
          <%= f.text_field :description, as: :text %>
        </div>
        <div class="actions">
          <%= f.button :submit, "CrÃ©er le lieu" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
