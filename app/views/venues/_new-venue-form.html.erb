
<%= simple_form_for [@user, venue], url: user_venues_path(@user), html: { id: :new_venue_form} do |f| %>
  <%= f.input :name, label: "nom de l'établissement:" %>
  <%= f.label :category, "Catégorie:" %>
  <%= f.select :category, Venue::CATEGORIES %>
  <%= f.input :street, label: "Numéro, type et nom de la voie:" %>
  <%= f.input :city, label: "ville:" %>
  <%= f.input :zipcode, label: "code postal:" %>
  <%= f.label :country, "Pays:" %>
  <%= f.select :country, Venue::COUNTRY %>
  <%= f.input :description, label: "description de votre établissement:", as: :text, input_html: {rows: 4} %>
  <%= f.input :lodging, label: "Votre établissement comprend-t-il des loges?" %>
  <%= f.input :paying, label: "Prévoyez-vous une rémunération pour les artistes?" %>
  <%= f.input :capacity, label: "Quelle est la capacité d'accueil de votre établissement?" %>
  <%= f.label :scene_size, label: "Taille approximative de la scène:" %>
  <%= f.select :scene_size, Venue::SCENE_SIZE %>
<% end %>
