<%= link_to user_path(user), style: 'text-decoration: none; color: inherit' do %>
  <div class="user-card text-center">
    <div class="banner-user-card">
    <%= image_tag user.avatar, class: "user-card-avatar" %>
    </div>
    <h2><%= user.name %></h2>
    <% if user.act? %>
      <p><%= Style.where(user: user.id).map { |style| style[:content] }.join(", ") %></p>
    <% else %>
      <p><strong><%= user.city %></strong></p>
    <% end %>
  </div>
<% end %>
