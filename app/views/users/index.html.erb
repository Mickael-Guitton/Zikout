<div class="d-flex justify-content-between">
  <div class="col-3 sticky-custom">
      <div class="side-bar">
        <%= render "users/my-user-card"%>
      </div>
      <div class="filters p-4">
        <h5 class="mb-3"> Filtres </h5>
        <form action="/users" method="get">
          <div class="form-group mb-3">
            <label for="city">Ville</label>
            <input type="text" name="city" id="city" class="form-control">
          </div>
          <div class="form-group">
            <label for="style">Style</label>
            <input type="text" name="style" id="style" class="form-control">
          </div>
          <button type="submit" class="button-custom">Filtrer</button>
        </form>
      </div>
    </div>

  <div class="col-9 results">
    <h1 class="text-end mb-4">Personnes autour de vous</h1>

    <% if  current_user.role == "act" %>
    <div>
      <h4 class="my-4">Organisateur</h4>
      <div class="grid-custom">
        <% @tenants.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <hr />
    <div>
      <h4 class="mt-5 mb-4">Groupe et musiciens</h4>
      <div class="grid-custom">
        <% @acts.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <% end %>

    <% if  current_user.role == "tenant" %>
    <div>
      <h4 class="my-4">Groupe et musiciens</h4>
      <div class="grid-custom">
        <% @acts.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <hr />
    <div>
      <h4 class="mt-5 mb-4">Organisateur</h4>
      <div class="grid-custom">
        <% @tenants.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>
