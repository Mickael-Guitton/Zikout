<div class="d-flex justify-content-between">
  <div class="col-3 side-bar p-3">

    <%= render "users/my-user-card" %>

    <div class="filters p-4">
      <h2>Filtres</h2>
      <form action="/users" method="get">
      <div class="form-group">
        <label for="city">Ville</label>
        <input type="text" name="city" id="city" class="form-control">
      </div>
      <div class="form-group">
        <label for="style">Style</label>
        <input type="text" name="style" id="style" class="form-control">
      </div>
    </div>
  </div>

  <div class="col-9 results p-3">
    <h1>Les utilisateurs proches de chez vous</h1>

    <% if  current_user.role == "act" %>
    <div class="border p-3">
      <h2>Organisateur</h2>
      <div class="grid-custom">
        <% @tenants.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <div class="border p-3">
      <h2>Groupe et musiciens</h2>
      <div class="grid-custom">
        <% @acts.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <% end %>

    <% if  current_user.role == "tenant" %>
    <div class="border p-3">
      <h2>Groupe et musiciens</h2>
      <div class="grid-custom">
        <% @acts.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <div class="border p-3">
      <h2>Organisateur</h2>
      <div class="grid-custom">
        <% @tenants.each do |user| %>
          <%= render "user-card", user: user %>
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>
