<div class="banner mb-4">
    <% if @user.banner.attached? %>
      <%= cl_image_tag @user.banner.key, class:"banner-img" %>
    <% else %>
      <img src="../../assets/images/banner.jpeg" class="banner-img" alt="<%= @user.name %> banner">
    <% end %>
    <% if @user.banner.attached? %>
      <%= cl_image_tag @user.avatar.key, class:"banner-avatar" %>
    <% else %>
      <img src="../../assets/images/Zikout_logo.svg" class="banner-avatar" alt="<%= @user.name %> banner">
    <% end %>
</div>

<div class="d-flex">
  <div class="row">
    <div class="user-info col-3">
      <%= render "user-info" %>
    </div>
    <div class="user-content col-9">
      <%= render "user-content" %>
    </div>
  </div>
</div>
